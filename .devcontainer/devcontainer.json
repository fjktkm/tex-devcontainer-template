{
    "name": "tex",
    "image": "texlive/texlive:latest",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "mounts": [
        {
            "target": "${containerWorkspaceFolder}/build",
            "type": "volume"
        }
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "James-Yu.latex-workshop",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "tamasfe.even-better-toml"
            ]
        }
    }
}
